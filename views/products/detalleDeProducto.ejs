<!DOCTYPE html>
<html lang="en">
<!-- head -->
<%- include('../partials/head.ejs', {title: 'Producto'}); %>  
    <body class="detail-body">
        <!-- header -->
        <%- include('../partials/header') %> 
        <!-- main -->
        <main class="detail-main">
            <h3 class="detail-title"><%= product.product_name %> </h3>
            <div class="detail-product-image">
                <img src= "/images/products/<%= product.image %> " alt="">
            </div>
            <div class="detail-price">
                <h3>$ <%= toThousand(product.price) %> </h3>
                <br>
                <p>Cuotas sin Inter√©s</p>
            </div>
            <div class="detail-description">
                <p><%= product.description %> </p>
            </div>
            <div class="detail-buy">
                <form  action="/products/detail/<%= product.id %>" method="POST">
                <input type="submit" class= "botonInicioPa2" href="/products/add/<%= product.id %> " value="COMPRAR" >
                    
                </form>
            </div>
            <% if(locals.isLogged && locals.userLogged.category_id == 1) {%>
            <a href="/products/edit/<%= product.id %> " class="detail-editar-prod">Editar Producto</a>
            <form action="/products/delete/<%= product.id %>?_method=DELETE" method="post">
                <button type="submit">Eliminar</button>
            </form>
            <%}%>
            <div class="whatsapp">
                <i class="fab fa-whatsapp"></i>
            </div>
        </main>
        <!-- footer -->
        <%- include('../partials/footer') %> 
        
    </body>
</html>